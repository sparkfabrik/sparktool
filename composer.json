{
    "name": "sparkfabrik/spark",
    "description": "Sparkfabrik command line tool",
    "require": {
        "symfony/console": "2.7.0-BETA2",
        "symfony/config": "~2.6",
        "symfony/finder": "~2.6",
        "symfony/process": "~2.6",
        "symfony/filesystem": "~2.6",
        "symfony/yaml": "~2.6",
        "m4tthumphrey/php-gitlab-api": "7.8.0",
        "kbsali/redmine-api": "1.5.3"
    },
    "license": "GPL3",
    "authors": [
        {
            "name": "Paolo Mainardi",
            "email": "paolo@twinbit.it"
        }
    ],
    "autoload": {
        "psr-4": { "Sparkfabrik\\Tools\\Spark\\": "src/Sparkfabrik" }
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*",
        "squizlabs/php_codesniffer": ">=2.3.1",
        "codegyre/robo": "0.5.2",
        "codeclimate/php-test-reporter": "dev-master"
